

<div role="main" class="container main-body">
  <div class="row">
    <div ng-controller="NotebooksController" class="col-md-2">
      <h4>Notebooks</h4>
      <button>Add Notebook</button>
          <div ng-repeat="notebook in notebooks" ng-mousedown="alert('test');">
          {{notebook.name}}
          </div>

    </div>

    <div class="col-md-10" ng-controller="NotesController">

      Title: <input ng-model="note.title"/>

      <div class="btn-toolbar">
        <button id="playButton" type="button" class="btn btn-default">Play</button>
        <button id="evalButton" type="button" class="btn btn-default">Evaluate</button>
      </div>


      <ul class="nav nav-tabs">
        <li class="active" id="editorTab0"><a href="javascript:showTab(0);">Orc</a></li>
        <li id="editorTab1"><a href="javascript:showTab(1);">Sco</a></li>
        <li id="editorTab2"><a href="javascript:showTab(2);">Console</a></li>
        <li id="editorTab3"><a href="javascript:showTab(3);">Help</a></li>
      </ul>

<textarea class="ng-show" cols="80" rows="20" id="orc_code"
  style="width:100%" ng-model="note.orc" ></textarea>
<textarea class="ng-hide" cols="80" rows="20" style="width:100%" 
  ng-model="note.sco" id="sco_code"></textarea>
<textarea class="ng-hide console" cols="80" rows="20" id="console"
  style="width:100%">Csound: not loaded</textarea>

<div class="ng-hide" id="help">
  <h4>Shortcuts</h4>
  <ul>
    <li>shift-enter - evaluate selection or full text area if orc or sco tab is selected</li>
  </ul>

    </div>
  </div>

</div>



<!--pNaCl csound module-->
<div id="engine"></div>

